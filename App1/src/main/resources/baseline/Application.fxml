<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane minWidth="600.0" prefHeight="900.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baseline.ApplicationController">
    <children>
        <HBox id="HBox" alignment="CENTER" spacing="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Search Data:" />
                <TextField fx:id="filterField" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>

        <TableView fx:id="itemTable" prefHeight="-1.0" prefWidth="-1.0" tableMenuButtonVisible="false" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="40.0">
            <columns>
                <TableColumn fx:id="itemNameColumn" maxWidth="200.0" minWidth="10.0" prefWidth="25.0" text="Item Name" >
                    <cellValueFactory><PropertyValueFactory property="itemName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="itemDescriptionColumn" maxWidth="300.0" minWidth="10.0" prefWidth="25.0" text="Item Description" >
                    <cellValueFactory><PropertyValueFactory property="itemDescription" /> </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="itemDueDateColumn" maxWidth="200.0" minWidth="10.0" prefWidth="25.0" text="Item Due Date" >
                    <cellValueFactory><PropertyValueFactory property="itemDueDate" /> </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="itemStatusColumn" maxWidth="200.0" minWidth="10.0" prefWidth="25.0" text="Item Status" >
                    <cellValueFactory><PropertyValueFactory property="itemStatus" /> </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="isCompleteColumn" maxWidth="200.0" minWidth="10.0" prefWidth="25.0" text="Complete/Pending" >
                    <cellValueFactory><PropertyValueFactory property="isComplete" /> </cellValueFactory>
                </TableColumn>

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0"  GridPane.rowIndex="2">
        <TextField fx:id="itemNameField" promptText="Item Name" prefWidth="200"/>
        <TextField fx:id="itemDescriptionField" promptText="Item Description"   prefWidth="300"/>
        <DatePicker fx:id="itemDueDateField" promptText="YYYY-MM-DD"   prefWidth="200"/>
        <CheckBox fx:id="itemStatusField"   prefWidth="20"/>
        <Button text="Add Item" onAction="#addItem"/>
        <Button text="Load Data" onAction="#loadDataItem"/>
        <Button text="Save" onAction="#saveData"/>
    </HBox>
</AnchorPane>

